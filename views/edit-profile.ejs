<!-- views/edit-profile.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Edit Profile - SkyBook</title>

  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Poppins :wght@400;600&display=swap" rel="stylesheet">

  <!-- Font Awesome Icons -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css ">

  <!-- Custom CSS -->
  <link rel="stylesheet" href="/stylesheets/profile.css">
</head>
<body>

  <!-- Top Navigation Bar -->
  <nav class="top-nav">
    <div class="logo">
      <i class="fas fa-plane-departure"></i>
      <span>SkyBook Dashboard</span>
    </div>

    <div class="user-menu">
      <span><%= user.FirstName %> <%= user.LastName %></span>
      <div class="dropdown">
        <label for="dropdown-toggle" class="dropbtn-label">
          <i class="fas fa-user-circle"></i>
        </label>
        <input type="checkbox" id="dropdown-toggle" class="dropdown-toggle">

        <div class="dropdown-content">
          <a href="/profile/edit"><i class="fas fa-user-edit"></i> Edit Profile</a>
          <a href="/bookings"><i class="fas fa-ticket-alt"></i> My Bookings</a>
          <a href="/change-password"><i class="fas fa-key"></i> Change Password</a>
          <a href="/logout"><i class="fas fa-sign-out-alt"></i> Logout</a>
        </div>
      </div>
    </div>
  </nav>

  <!-- Main Container -->
  <div class="main-container">

    <!-- Sidebar -->
    <aside class="sidebar">
      <ul>
        <li><a href="/"><i class="fas fa-sitemap"></i> Dashboard</a></li>
        <li><a href="/schedule"><i class="fas fa-plane"></i> Flight Scheduling</a></li>
        <li><a href="/search"><i class="fas fa-ticket-alt"></i> Search Flights</a></li>
        <li><a href="#"><i class="fas fa-chair"></i> Seat Management</a></li>
        <li><a href="#"><i class="fas fa-credit-card"></i> Payments & Cancellations</a></li>
        <li><a href="#"><i class="fas fa-chart-line"></i> Reporting & Analytics</a></li>
        <li><a href="#"><i class="fas fa-users-cog"></i> Admin Tools</a></li>
      </ul>
    </aside>

    <!-- Content Area -->
    <section class="content">
      <h1>Edit Your Profile</h1>
      <p>Update your personal information below.</p>

      <!-- Toast Message -->
      <% if (toastMessage) { %>
        <div class="toast <%= toastMessage.includes('success') ? 'success' : 'error' %>">
          <%= toastMessage %>
        </div>
      <% } %>

      <!-- Edit Form -->
      <form action="/profile/edit" method="POST" class="profile-form">
        <div class="form-group">
          <label for="firstName">First Name</label>
          <input type="text"
                 name="firstName"
                 id="firstName"
                 value="<%= user.FirstName %>"
                 required>
        </div>

        <div class="form-group">
          <label for="lastName">Last Name</label>
          <input type="text"
                 name="lastName"
                 id="lastName"
                 value="<%= user.LastName %>"
                 required>
        </div>

        <div class="form-group">
          <label for="email">Email</label>
          <input type="email"
                 name="email"
                 id="email"
                 value="<%= user.Email %>"
                 required>
        </div>

        <div class="form-group">
          <label for="passportNumber">Passport Number</label>
          <input type="text"
                 name="passportNumber"
                 id="passportNumber"
                 value="<%= user.PassportNumber %>"
                 required>
        </div>

        <div class="form-group">
          <label for="phoneNumber">Phone Number</label>
          <input type="tel"
                 name="phoneNumber"
                 id="phoneNumber"
                 value="<%= user.PhoneNumber %>"
                 required>
        </div>

        <button type="submit" class="btn-save">
          <i class="fas fa-save"></i> Save Changes
        </button>
      </form>
    </section>
  </div>
</body>
</html>